package main

import (
 "fmt"
 "math"
)

func main() {
 var num1, num2 int

 fmt.Print("Введите первое целое число: ")
 fmt.Scanln(&num1)

 fmt.Print("Введите второе целое число: ")
 fmt.Scanln(&num2)

 sum := num1 + num2
 diff := int(math.Abs(float64(num1 - num2)))

 fmt.Println("Сумма чисел:", sum)
 fmt.Println("Разница чисел:", diff)

 min := int(math.Min(float64(num1), float64(num2))
 max := int(math.Max(float64(num1), float64(num2))

 fmt.Print("Ряд цифр от минимального до максимального числа: ")
 for i := min; i <= max; i++ {
  fmt.Print(i, " ")
 }
}
